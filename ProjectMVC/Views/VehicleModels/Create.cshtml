@model ProjectService.Model.VehicleModelDTOInsert

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle model</h4>
<hr />
<div class="col-md-8">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group col-md-6">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
                <div class="form-group col-md-6">
                <label asp-for="MakeId" class="control-label">Maker</label>
                <select asp-for="MakeId" class="form-select" asp-items="ViewBag.VehicleMakerList">
                    <option disabled selected>Select Maker</option>
                </select>
                <span asp-validation-for="MakeId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-7">
                <input type="submit" value="Create" class="btn btn-primary col-md-5 " />
                <a asp-action="Index" class="col-md-5 btn btn-outline-dark m-1">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
