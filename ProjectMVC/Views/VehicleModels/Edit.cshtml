@model ProjectService.Model.VehicleModelDTOInsert

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Vehicle model</h4>
<hr />
<div class="row">
    <div>
        <input type="hidden" asp-for="MakeId" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="MakeId" class="control-label">Maker</label>
                <select asp-for="MakeId" class="form-select"
                asp-items="ViewBag.VehicleMakerList">
                    <option disabled selected>Select Maker</option>
                </select>
                <span asp-validation-for="MakeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="Save" class="btn btn-primary col-md-3 m-1"/>
                <a asp-action="Index" class="btn btn-outline-dark col-md-3 m-1">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
